{
  "plugins": ["meteor"],
  "extends": ["plugin:meteor/recommended", "eslint:recommended"],
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "no-undef": 0,
    "no-unused-vars": 0,
    "meteor/audit-argument-checks": 0
  }
}
